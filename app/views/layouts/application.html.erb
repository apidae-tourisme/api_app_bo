  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">ApiApp</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if controller_name == 'dashboard' %>"><a href="/">Tableau de bord</a></li>
      </ul>
    </div>
  </div>
</nav>
<div class="container" role="main">
  <%= yield %>
</div>
</body>
</html>

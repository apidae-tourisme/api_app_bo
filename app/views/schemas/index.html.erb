<p id="notice"><%= notice %></p>

<h1>Listing Schemas</h1>

<table>
  <thead>
    <tr>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Name</th>
      <th>Description</th>
      <th>Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schemas.each do |schema| %>
      <tr>
        <td><%= schema.created_at %></td>
        <td><%= schema.updated_at %></td>
        <td><%= schema.name %></td>
        <td><%= schema.description %></td>
        <td><%= schema.thumbnail %></td>
        <td><%= link_to 'Show', schema %></td>
        <td><%= link_to 'Edit', edit_schema_path(schema) %></td>
        <td><%= link_to 'Destroy', schema, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

